@model LoginViewModel

@{
    ViewData["Title"] = "Вход на сайт";
}


<div class="container reg-form">
    <form class="row justify-content-center col-12" method="post" action="/login">

        <h2>Авторизация</h2>

        <div class="mb-3 col-12 col-md-8 col-lg-6 col-xl-5">
            <label for="formInputEmail" class="form-label">Email</label>
            <input id="formInputEmail" class="form-control" name="Email" type="text" aria-describedby="emailHelp" placeholder="Введите почту" value="@Model.Email">
            <span asp-validation-for="Email"></span>
        </div>

        <div class="width-100"></div>

        <div class="mb-3 col-12 col-md-8 col-lg-6 col-xl-5">
            <label for="formInputPassword" class="form-label">Пароль</label>
            <input id="formInputPassword" class="form-control" name="password" type="password" placeholder="Введите пароль">
            <span asp-validation-for="Password"></span>
        </div>

        <div class="width-100"></div>

        <div class="mb-3 col-12 col-md-8 col-lg-6 col-xl-5">
            <button type="submit" class="btn btn-secondary">Войти</button>
            <a href="/register">Зарегистрироваться</a>
        </div>

        <div class="width-100"></div>

        <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="max-height: max-content">
            <input class="checkbox" type="checkbox" name="RememberMe" value="true"/>
            <label>Запомни меня</label>
        </div>

    </form>
</div>